@using Bright.Models
@model OneIdeaWrapper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <title>Ideas Details</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <hr>
                    <div class="col-sm-2">
                        <button><a href="/dashboard">Dashboard</a></button>
                    </div>
                <hr>
                    <h1>@Model.LoggedUser.Alias Says</h1>
                    <li>@Model.Idea.Description</li>
            </div>
        </div>

        <div class="row">
            <table class="table col-sm-10 offset-sm-1">
                <thead>
                    <tr>
                        <th>Alias</th>
                        <th>Name</th>
                    </tr>
                </thead>
            <tbody>
                    @foreach(User user in Model.AllUsers)
                    {
                        <tr>
                            <td><a asp-action="OneIdea" asp-controller="Home" asp-route-id="@user.UserId">@user.Alias</a></td>
                            <td>@user.Name</td>                            
                        </tr>
                    }
            </tbody>
            </table>
        </div>
        
   
</body>
</html>